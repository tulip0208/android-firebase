<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#02043E">
    <ImageButton
        android:id="@+id/close_buttonID"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/close_24"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/user_imageID"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:elevation="10dp"
        android:src="@drawable/person_profile"/>
    <EditText
        android:id="@+id/nameID"
        android:layout_below="@+id/user_imageID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:fontFamily="@font/roboto"
        android:background="@drawable/custom_edittext_back"
        android:textColorHint="#1E2420"
        android:hint="Update Name"
        android:padding="12dp" />
    <EditText
        android:id="@+id/phoneID"
        android:layout_below="@+id/nameID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="20dp"
        android:textColorHint="#1E2420"
        android:textColor="@color/gray"
        android:textSize="12sp"
        android:fontFamily="@font/roboto"
        android:background="@drawable/custom_edittext_back"
        android:hint="Update Phone"
        android:padding="12dp" />
    <EditText
        android:id="@+id/bioID"
        android:layout_below="@+id/phoneID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Update Bio"
        android:textColorHint="#1E2420"
        android:background="@drawable/custom_edittext_back"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="12dp"
        android:textSize="12sp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/gray"
        android:layout_marginTop="25dp"/>
    <Button
        android:id="@+id/saveButtonID"
        android:layout_below="@+id/bioID"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Update"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:background="@drawable/update_profile"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        android:layout_marginTop="25dp"/>

</RelativeLayout>